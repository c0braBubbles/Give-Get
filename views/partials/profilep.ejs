<!-- Brukerens innlegg/Annonser -->
<div id="annonse_div" style="display: none;" class="container w-75 h-75 p-3 bg-Gainsboro mt-5">

    <h2 class="font-weight-bold text-dark m-auto"> Mine annonser </h2>
    <hr class="bg-Indigo">
    <button type="button" class="btn-close" aria-label="Close" onclick="closeMyPosts()"></button>

    <div class="container w-100 h-100">
        <div class="row row-cols-2">

            <div class="col w-75 m-auto">
                <table class="table" id="table">
                    <th colspan="1" scope="col"> Tittel </th>
                    <th colspan="1" scope="col"></th>
                    <th colspan="1" scope="col">Handlinger</th>
                </table>
                <table class="table" id="done">
                    <th colspan="1" scope="col"> Fullførte Annonser </th>
                </table>
            </div>
        </div>


        <p id="data"> </p>


        <!-- Modal/Popup for rediger Annonse -->
        <div class="modal fade" id="myModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-xl bg-Jet">
                <div class="modal-content">
                    <div class="modal-body">
                        <div class="container w-100 h-100 p-3 bg-White mt-2">
                            <h2 class="font-weight-bold text-dark m-auto"> Rediger annonse </h2>
                            <hr class="bg-Indigo">
                            <div class="m-5">

                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="flexRadioDefault" id="edtilbycb">
                                    <label class="form-check-label text-dark" for="edtilbycb">
                                        Tilbud
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="flexRadioDefault"
                                        id="edetterspørcb">
                                    <label class="form-check-label text-dark" for="edetterspørcb">
                                        Etterspørsel
                                    </label>
                                </div>

                                <div class="mt-3">
                                    <label for="Title" class="form-label text-dark">Tittel</label>
                                    <input class="form-control" id="Title" aria-describedby="emailHelp">
                                </div>


                                <div class="mb-3 mt-3">
                                    <label for="Description" class="form-label text-dark">Beskrivelse</label>
                                    <textarea class="form-control" id="Description" rows="3"></textarea>
                                </div>

                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="edpositioncb">
                                    <label class="form-check-label text-dark" for="edpositioncb">
                                        Bruk min posisjon
                                    </label>
                                </div>
                            </div>
                        </div>

                        <div class="modal-footer">
                            <button type="button" class="btn btn-primary" data-bs-dismiss="modal"
                                id="update">Oppdater</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<!-- Edit profile -->
<div id="redigerProfil_div" style="display: none;">
    <div class="container w-75 h-75 p-3 bg-Gainsboro mt-5">
        <div class="text-left">
            <img src="https://moonvillageassociation.org/wp-content/uploads/2018/06/default-profile-picture1.jpg "
                class="rounded-circle w-25 m-5" alt="..." id="redigerProfilBilde">

            <div class="input-group input group-lg mb-3">
                <input type="file" class="form-control" id="inputGroupFile02" aria-describedby="button-addon2" onchange="velgFil(event)">

                <button class="btn btn-primary text-center" id="button-addon2" onclick="changeProfilePicture()"> Endre profilbilde
                    <svg xmlns="http://www.w3.org/2000/svg" width="2rem" height="1rem" fill="currentColor"
                        class="bi bi-camera-fill center" viewBox="0 0 16 16" style="margin-bottom:3px">
                        <path d="M10.5 8.5a2.5 2.5 0 1 1-5 0 2.5 2.5 0 0 1 5 0z" />
                        <path
                            d="M2 4a2 2 0 0 0-2 2v6a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V6a2 2 0 0 0-2-2h-1.172a2 2 0 0 1-1.414-.586l-.828-.828A2 2 0 0 0 9.172 2H6.828a2 2 0 0 0-1.414.586l-.828.828A2 2 0 0 1 3.172 4H2zm.5 2a.5.5 0 1 1 0-1 .5.5 0 0 1 0 1zm9 2.5a3.5 3.5 0 1 1-7 0 3.5 3.5 0 0 1 7 0z" />
                    </svg>
                </button>
            </div>


            <hr>


            <div>
                <div class="mb-3">
                    <label class="form-label text-dark">Brukernavn</label>
                    <input type="text" class="form-control w-50" id="editUsername">
                </div>

                <div class="row mb-3 w-50">

                    <div class="col-sm">
                        <label class="form-label text-dark">Fornavn</label>
                        <input type="text" class="form-control" id="editFirstname">
                    </div>
                    <div class="col-sm" style="margin-right:-4.5%">
                        <label class="form-label text-dark">Etternavn</label>
                        <input type="text" class="form-control" id="editLastname">
                    </div>
                </div>



                <div class="mb-3">
                    <label class="form-label text-dark">E-post</label>
                    <input type="email" class="form-control w-50" placeholder="example@hotmail.com" id="editEmail">
                </div>

                <button class="btn btn-success" id="submitEditsButton" onclick="saveUserChanges()">Lagre endringer</button>
                <button type="button" class="btn btn-danger btn-close" aria-label="Close"
                    onclick="exitEditing()"></button>
                <button class="btn btn-danger float-end" id="deleteUserButton" onclick="deleteUser()">Slett bruker</button>
            </div>

        </div>
    </div>
    <div id="output"></div>
</div>


<!-- Innstillinger -->
<div class="container w-75 h-75 p-3 bg-Gainsboro mt-5" id="innstillinger_div" style="display: none;">
    <h2 class="font-weight-bold text-dark m-auto"> Innstillinger </h2>
    <hr class="bg-Indigo">
    <button type="button" class="btn-close" aria-label="Close" onclick="closeSettings()"></button>
    <div class="m-5">
        <label for="customRange1" class="form-label text-dark">Radius</label>
        <input type="range" class="form-range" min="1" max="32" id="Avstand">

        <div class="container w-100 text-left">
            <div class="row row-cols-2">
                <div class="col w-25">
                    <label class="label text-dark">1km</label>
                </div>

                <div class="col w-50 text-center">
                    <div class="badge bg-primary ">Km: <span id="Verdi"></span></div>
                </div>

                <div class="col w-25 text-end">
                    <label class="label text-dark">32km</label>
                </div>
            </div>
        </div>
    </div>
    

    <div class="m-5">
        <div id="google_translate_element_id"></div>
    </div>
</div>

<script>
    // Åpne og lukke "mine innlegg" - Mats
    function openMyPosts() {
        document.getElementById("profilen").style.display = "none";
        document.getElementById("annonse_div").style.display = "block";
    }
    function closeMyPosts() {
        document.getElementById("profilen").style.display = "block";
        document.getElementById("annonse_div").style.display = "none";
    }

    // Åpne og lukke "rediger profil" - Mats
    function openEditProfile() {
        document.getElementById("profilen").style.display = "none";
        document.getElementById("redigerProfil_div").style.display = "block";
    }
    function exitEditing() {
        document.getElementById("profilen").style.display = "block";
        document.getElementById("redigerProfil_div").style.display = "none";
    }

    // Åpne og lukke "innstillinger" - Mats
    function openSettings() {
        document.getElementById("profilen").style.display = "none";
        document.getElementById("innstillinger_div").style.display = "block";
    }
    function closeSettings() {
        document.getElementById("profilen").style.display = "block";
        document.getElementById("innstillinger_div").style.display = "none";
    }
</script>

