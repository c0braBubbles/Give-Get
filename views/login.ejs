<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Bootstrap CSS -->
    <link href="css/bootstrap.min.css" rel="stylesheet">
    <title>Login page</title>
</head>
<body style="background-color:#353535">
      
    <div class="container w-50" style="padding-top:10%;">
        <div class="card" style="background-color:#284B63;"> <!-- rammefarge, farge pÃ¥ header/footer -->
            <div class="card-header" style="color:#FFFFFF;">Login</div> <!--Login-top farge-->
            <div class="card-body" style="background-color:#FFFFFF"> <!-- farge bak input felt -->
                <div class="form-inline" id="formContainer">
                    <div class="form-floating mb-3">
                        <input id="email" type="email" class="form-control" placeholder="Email">
                        <label for="floatingInput">Email address</label>
                    </div>

                    <div class="form-floating"> 
                        <input id="passord" type="password" class="form-control" placeholder="Password">
                        <label for="floatingPassword">Password</label>
                    </div>

                    <div class="checkbox" style="padding-top:5px;">
                        <label>
                            <input type="checkbox"> Remember me
                        </label>
                        <button onclick="login()" class="btn btn-primary">Login</button>
                    </div>
                </div>
            </div>
            <div class="card-footer text-center" style="height:60px;">
                <p><small>
                    New user?<a href="#" class="btn btn-link" role="button" style="padding-bottom:10px; padding-left:0px;">Register here!</a> 
                </small></p>
            </div>
        </div>
    </div>

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>
</body>
</html>
